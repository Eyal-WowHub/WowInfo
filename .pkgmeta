package-as: WowInfo

enable-nolib-creation: no

externals:
  Libs/LibStub: https://repos.curseforge.com/wow/libstub/trunk
  Libs/CallbackHandler-1.0: https://repos.curseforge.com/wow/callbackhandler/trunk
  Libs/LibDataBroker-1.1: https://repos.curseforge.com/wow/libdatabroker-1-1
  Libs/AceDB-3.0: https://repos.curseforge.com/wow/ace3/trunk/AceDB-3.0
  Libs/Contracts: https://github.com/eyal-wow-addons/Contracts
  Libs/Addon: https://github.com/eyal-wow-addons/Addon
  Libs/CharacterInfo: https://github.com/eyal-wow-addons/CharacterInfo
